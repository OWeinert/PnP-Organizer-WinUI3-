    xmlns:local="using:PnPOrganizer"
    xmlns:views="using:PnPOrganizer.Views">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
